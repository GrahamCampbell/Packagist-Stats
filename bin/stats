#!/usr/bin/env php
<?php

declare(strict_types=1);

/*
 * This file is part of Packagist Stats.
 *
 * (c) Graham Campbell <hello@gjcampbell.co.uk>
 *
 * For the full copyright and license information, please view the LICENSE
 * file that was distributed with this source code.
 */

error_reporting(E_ALL);

(function () {
    $loaded = false;

    foreach ([__DIR__.'/../../../autoload.php', __DIR__.'/../vendor/autoload.php'] as $file) {
        if (file_exists($file)) {
            require $file;
            $loaded = true;
            break;
        }
    }

    if (!$loaded) {
        fwrite(
            STDERR, 'You need to set up the project dependencies using the following commands:'.PHP_EOL.
            'wget http://getcomposer.org/composer.phar'.PHP_EOL.
            'php composer.phar install'.PHP_EOL
        );
        exit(1);
    }

    $xdebug = new Composer\XdebugHandler\XdebugHandler('stats');
    $xdebug->check();
})();

Symfony\Component\ErrorHandler\ErrorHandler::register();

(new GrahamCampbell\PackagistStats\Console\Application)->run();
